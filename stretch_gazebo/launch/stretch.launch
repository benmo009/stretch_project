<launch>
    <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch"/>
        <!-- <arg name="world_name" value="$(find stretch_gazebo)/urdf/stretch.sdf"/> -->
        <!-- more default parameters can be changed here -->

    <!-- Load Stretch xacro into ROS Parameter Server -->
    <param name="robot_description" command="$(find xacro)/xacro '$(find stretch_gazebo)/urdf/stretch_gazebo.xacro'" />

    <!-- Spawn a robot into Gazebo -->
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" 
            args="-param robot_description -urdf -model stretch" />

    <!-- Start Robot Joint State Publisher node -->


    <!-- Load differential drive controller config parameter -->
    <rosparam command="load" file="$(find stretch_gazebo)/config/stretch_control.yaml"/>

    <!-- Spawn differential drive controller -->
    <node name="stretch_controller_spawner" pkg="controller_manager" type="spawner"
        args="/stretch/diff_drive_controller"/>


    <node name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering">
        <param name="default_topic" value="/stretch/diff_drive_controller/cmd_vel"/>
    </node>
    


        
</launch>